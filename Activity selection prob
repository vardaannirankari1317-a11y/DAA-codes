#include <stdio.h>

void activitySelection(int start[], int finish[], int n) {
    // Sort activities by finish time using simple selection sort
    for (int i = 0; i < n - 1; i++) {
        for (int j = i + 1; j < n; j++) {
            if (finish[j] < finish[i]) {
                int temp = finish[i];
                finish[i] = finish[j];
                finish[j] = temp;

                temp = start[i];
                start[i] = start[j];
                start[j] = temp;
            }
        }
    }

    printf("Selected activities:\n");

    int i = 0;
    printf("%d ", i);

    for (int j = 1; j < n; j++) {
        if (start[j] >= finish[i]) {
            printf("%d ", j);
            i = j;
        }
    }
}

int main() {
    int start[] = {5, 1, 3, 0, 5, 8};
    int finish[] = {9, 2, 4, 6, 7, 9};
    int n = sizeof(start) / sizeof(start[0]);

    activitySelection(start, finish, n);

    return 0;
}
